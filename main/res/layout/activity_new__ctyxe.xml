<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Ctyxe_new">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager_img_ctyxe"
        android:background="@drawable/bo_goc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:padding="10dp"
        android:layout_centerInParent="true"
        android:clipToPadding="false"
        android:foregroundGravity="center"
        android:overScrollMode="never">


    </androidx.viewpager.widget.ViewPager>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etmaloai_new"
            android:drawableLeft="@drawable/ic_code_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/maLoai" />

        <EditText
            android:id="@+id/ettenloai_new"
            android:drawableLeft="@drawable/ic_border_color_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/tenLoai" />

        <EditText
            android:id="@+id/etxuatxu_new"
            android:drawableLeft="@drawable/ic_explore_black_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/xuatXu" />
    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btnThem_new"
            android:drawableLeft="@drawable/ic_add_box_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/them" />

        <Button
            android:id="@+id/btnTroVe_new"
            android:drawableLeft="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/trove" />
    </LinearLayout>
</LinearLayout>